<Window x:Class="CybersecurityChatbot.ReminderPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ›¡ï¸ Task Reminder"
        Height="280"
        Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    
    <Window.Resources>
        <Storyboard x:Key="SlideInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.3" />
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="20" To="0" Duration="0:0:0.3" />
        </Storyboard>
        
        <Storyboard x:Key="SlideOutAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="1" To="0" Duration="0:0:0.2" />
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="0" To="-20" Duration="0:0:0.2" />
        </Storyboard>
    </Window.Resources>

    <Grid>
        <!-- Drop Shadow -->
        <Border Background="#40000000" 
                CornerRadius="12" 
                Margin="5"
                Effect="{x:Null}" />
        
        <!-- Main Container -->
        <Border x:Name="MainBorder"
                Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                BorderBrush="#E1E1E1"
                BorderThickness="1"
                CornerRadius="10"
                Margin="5"
                RenderTransformOrigin="0.5,0.5">
            
            <Border.RenderTransform>
                <TranslateTransform />
            </Border.RenderTransform>
            
            <Border.Effect>
                <DropShadowEffect Color="Black" 
                                 Opacity="0.2" 
                                 BlurRadius="10" 
                                 ShadowDepth="2" />
            </Border.Effect>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" 
                        Background="#3498DB"
                        CornerRadius="10,10,0,0"
                        Padding="15,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                  Text="ðŸ›¡ï¸"
                                  FontSize="20"
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0" />
                        
                        <TextBlock Grid.Column="1"
                                  Text="Cybersecurity Task Reminder"
                                  Foreground="White"
                                  FontWeight="SemiBold"
                                  FontSize="14"
                                  VerticalAlignment="Center" />
                        
                        <Button Grid.Column="2"
                               Name="CloseButton"
                               Content="âœ•"
                               Background="Transparent"
                               Foreground="White"
                               BorderThickness="0"
                               FontSize="12"
                               Width="20"
                               Height="20"
                               Cursor="Hand"
                               Click="CloseButton_Click"
                               ToolTip="Close" />
                    </Grid>
                </Border>
                
                <!-- Content -->
                <StackPanel Grid.Row="1" 
                           Margin="20,15,20,15">
                    
                    <TextBlock Name="TaskTitleText"
                              Text="Task Title"
                              FontSize="16"
                              FontWeight="Bold"
                              Foreground="#2C3E50"
                              TextWrapping="Wrap"
                              Margin="0,0,0,10" />
                    
                    <TextBlock Name="ReminderTextBlock"
                              Text="Reminder details will appear here"
                              FontSize="13"
                              Foreground="#7F8C8D"
                              TextWrapping="Wrap"
                              LineHeight="18"
                              Margin="0,0,0,15" />
                    
                    <TextBlock Name="TimeStampText"
                              FontSize="11"
                              Foreground="#BDC3C7"
                              HorizontalAlignment="Right" />
                </StackPanel>
                
                <!-- Action Buttons -->
                <Border Grid.Row="2"
                        Background="#F8F9FA"
                        CornerRadius="0,0,10,10"
                        BorderBrush="#E9ECEF"
                        BorderThickness="0,1,0,0"
                        Padding="15,12">
                    
                    <StackPanel Orientation="Horizontal"
                               HorizontalAlignment="Right">
                        
                        <Button Name="SnoozeButton"
                               Content="â° Snooze"
                               Background="#F39C12"
                               Foreground="White"
                               BorderThickness="0"
                               Padding="12,6"
                               Margin="0,0,8,0"
                               FontSize="12"
                               Cursor="Hand"
                               Click="SnoozeButton_Click" />
                        
                        <Button Name="CompleteButton"
                               Content="âœ… Mark Complete"
                               Background="#27AE60"
                               Foreground="White"
                               BorderThickness="0"
                               Padding="12,6"
                               Margin="0,0,8,0"
                               FontSize="12"
                               Cursor="Hand"
                               Click="CompleteButton_Click" />
                        
                        <Button Name="DismissButton"
                               Content="Dismiss"
                               Background="#95A5A6"
                               Foreground="White"
                               BorderThickness="0"
                               Padding="12,6"
                               FontSize="12"
                               Cursor="Hand"
                               Click="DismissButton_Click" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
