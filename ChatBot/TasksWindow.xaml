<Window x:Class="CybersecurityChatbot.TasksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Tasks Manager" 
        Height="700" Width="900"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Border Style="{StaticResource CardStyle}" Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="ðŸ›¡ï¸" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="Cybersecurity Task Manager" 
                           FontSize="24" FontWeight="Bold"
                           Foreground="{StaticResource TextBrush}" 
                           VerticalAlignment="Center"/>
            </StackPanel>
            
            <!-- Task List -->
            <ListView Name="TaskListView" Grid.Row="1" Margin="0,0,0,20"
                      Background="White" BorderBrush="#BDC3C7" BorderThickness="1">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ðŸ“ Title" DisplayMemberBinding="{Binding Title}" Width="200"/>
                        <GridViewColumn Header="ðŸ“„ Description" DisplayMemberBinding="{Binding Description}" Width="300"/>
                        <GridViewColumn Header="â° Reminder" DisplayMemberBinding="{Binding ReminderText}" Width="150"/>
                        <GridViewColumn Header="ðŸ“… Created" DisplayMemberBinding="{Binding CreatedDate, StringFormat='MM/dd/yyyy'}" Width="100"/>
                        <GridViewColumn Header="âœ… Status" DisplayMemberBinding="{Binding Status}" Width="80"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Task Management Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <Button Name="AddTaskButton" Content="âž• Add Task" 
                        Style="{StaticResource SuccessButtonStyle}"
                        Click="AddTaskButton_Click"
                        Width="120" Height="45" FontSize="14" Margin="0,0,10,0"/>
                <Button Name="EditTaskButton" Content="âœï¸ Edit Task" 
                        Style="{StaticResource ModernButtonStyle}"
                        Click="EditTaskButton_Click"
                        Width="120" Height="45" FontSize="14" Margin="0,0,10,0"/>
                <Button Name="CompleteTaskButton" Content="âœ… Complete" 
                        Style="{StaticResource SuccessButtonStyle}"
                        Click="CompleteTaskButton_Click"
                        Width="120" Height="45" FontSize="14" Margin="0,0,10,0"/>
                <Button Name="DeleteTaskButton" Content="ðŸ—‘ï¸ Delete" 
                        Style="{StaticResource DangerButtonStyle}"
                        Click="DeleteTaskButton_Click"
                        Width="120" Height="45" FontSize="14"/>
            </StackPanel>

            <!-- Close Button -->
            <Button Name="CloseButton" Grid.Row="3" Content="Close" 
                    Style="{StaticResource ModernButtonStyle}"
                    HorizontalAlignment="Center"
                    Click="CloseButton_Click"
                    Width="100" Height="40"/>
        </Grid>
    </Border>
</Window>
