<Window x:Class="CybersecurityChatbot.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="❓ Help" 
        Height="600" Width="700"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterOwner">
    
    <Border Style="{StaticResource CardStyle}" Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="❓ Help and Instructions"
                           FontSize="24" FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,30"/>
                
                <TextBlock Text="Welcome to the Cybersecurity Awareness Chatbot!"
                           FontSize="16" FontWeight="SemiBold"
                           Margin="0,0,0,15"/>
                
                <TextBlock Text="Features:"
                           FontSize="14" FontWeight="SemiBold"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="• Chat Assistant - Ask questions about cybersecurity"
                           FontSize="14" Margin="10,0,0,5"/>
                <TextBlock Text="• Task Management - Add and manage security tasks"
                           FontSize="14" Margin="10,0,0,5"/>
                <TextBlock Text="• Security Quiz - Test your knowledge"
                           FontSize="14" Margin="10,0,0,5"/>
                <TextBlock Text="• Activity Log - Track your progress"
                           FontSize="14" Margin="10,0,0,5"/>
                <TextBlock Text="• ChatGPT Integration - Get AI-powered assistance"
                           FontSize="14" Margin="10,0,0,20"/>
                
                <TextBlock Text="How to use:"
                           FontSize="14" FontWeight="SemiBold"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="1. Type messages in the chat box and click Send"
                           FontSize="14" Margin="10,0,0,5"/>
                <TextBlock Text="2. Use the GPT button for AI-powered responses"
                           FontSize="14" Margin="10,0,0,5"/>
                <TextBlock Text="3. Click buttons on the right to access features"
                           FontSize="14" Margin="10,0,0,5"/>
                <TextBlock Text="4. Ask about passwords, phishing, malware, etc."
                           FontSize="14" Margin="10,0,0,20"/>
                
                <Button Name="CloseButton" Content="Got it!" 
                        Style="{StaticResource ModernButtonStyle}"
                        HorizontalAlignment="Center"
                        Click="CloseButton_Click"
                        Width="120"/>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
