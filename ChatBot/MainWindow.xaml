<Window x:Class="CybersecurityChatbot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ›¡ï¸ Cybersecurity Awareness Chatbot" 
        Height="800" Width="1200"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ›¡ï¸" FontSize="32" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock Text="Cybersecurity Awareness Chatbot" 
                                   FontSize="24" FontWeight="Bold" 
                                   Foreground="White"/>
                        <TextBlock Text="Your personal cybersecurity assistant" 
                                   FontSize="14" 
                                   Foreground="#BDC3C7"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Name="CreateAccountButton" Content="ðŸ‘¤ Create Account" 
                            Style="{StaticResource SuccessButtonStyle}" 
                            FontSize="16" FontWeight="Bold"
                            Width="150" Height="45"
                            Click="CreateAccountButton_Click"
                            Margin="5,0"/>
                    <Button Name="ConsoleButton" Content="ðŸ“± Console Mode" 
                            Style="{StaticResource ModernButtonStyle}" 
                            Background="{StaticResource WarningBrush}"
                            Click="ConsoleButton_Click"
                            Margin="5,0"/>
                    <Button Name="HelpButton" Content="â“ Help" 
                            Style="{StaticResource ModernButtonStyle}"
                            Click="HelpButton_Click"
                            Margin="5,0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Chat Area -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Chat Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="ðŸ’¬" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="Chat Assistant" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Chat Messages -->
                    <ScrollViewer Grid.Row="1" Name="ChatScrollViewer" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Name="ChatMessagesPanel" Margin="0,0,10,0"/>
                    </ScrollViewer>
                    
                    <!-- Input Area -->
                    <Grid Grid.Row="2" Margin="0,15,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <RichTextBox Grid.Column="0" Name="MessageRichTextBox" 
                                         FontSize="14" Height="40"
                                         VerticalAlignment="Center"
                                         VerticalContentAlignment="Center"
                                         Foreground="#2C3E50"
                                         Background="White"
                                         BorderBrush="#BDC3C7"
                                         BorderThickness="2"
                                         Padding="12,10"
                                         Margin="5"
                                         KeyDown="MessageRichTextBox_KeyDown"
                                         VerticalScrollBarVisibility="Disabled"
                                         HorizontalScrollBarVisibility="Disabled"
                                         AcceptsReturn="False"/>
                            
                            <Button Grid.Column="1" Name="SendButton" 
                                    Content="Send" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Click="SendButton_Click"
                                    Width="80" Height="40"
                                    Margin="10,0,5,0"/>
                            
                            <Button Grid.Column="2" Name="ChatGPTButton" 
                                    Content="ðŸ¤– GPT" 
                                    Style="{StaticResource AccentButtonStyle}"
                                    Click="ChatGPTButton_Click"
                                    Width="80" Height="40"
                                    Margin="5,0,0,0"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
            
            <!-- Side Panel -->
            <StackPanel Grid.Column="1">
                
                <!-- Task Management -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="ðŸ“" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Text="Task Manager" FontSize="16" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Button Name="AddTaskButton" Content="âž• Add New Task" 
                                Style="{StaticResource SuccessButtonStyle}"
                                Click="AddTaskButton_Click"
                                Margin="0,0,0,10"/>
                        
                        <Button Name="ViewTasksButton" Content="ðŸ‘ï¸ View All Tasks" 
                                Style="{StaticResource ModernButtonStyle}"
                                Click="ViewTasksButton_Click"
                                Margin="0,0,0,10"/>
                        
                        <TextBlock Name="TaskCountLabel" Text="0 Active Tasks" 
                                   FontSize="12" 
                                   Foreground="{StaticResource MutedTextBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Quiz Section -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="ðŸŽ¯" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Text="Security Quiz" FontSize="16" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Button Name="StartQuizButton" Content="ðŸš€ Start Quiz" 
                                Style="{StaticResource AccentButtonStyle}"
                                Click="StartQuizButton_Click"
                                Margin="0,0,0,10"/>
                        
                        <TextBlock Name="QuizScoreLabel" Text="Best Score: Not taken yet" 
                                   FontSize="12" 
                                   Foreground="{StaticResource MutedTextBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Activity Log -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="ðŸ“Š" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Text="Activity Log" FontSize="16" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Button Name="ViewLogButton" Content="ðŸ“‹ View Activity" 
                                Style="{StaticResource ModernButtonStyle}"
                                Click="ViewLogButton_Click"
                                Margin="0,0,0,10"/>
                        
                        <Button Name="ClearLogButton" Content="ðŸ—‘ï¸ Clear Log" 
                                Style="{StaticResource AccentButtonStyle}"
                                Click="ClearLogButton_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
